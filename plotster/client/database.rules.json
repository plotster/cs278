{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid",
        "items": {
          "$goal": {
            "participants": {
              ".write": "auth != null",
              ".read": true
            }
          }
        },
        "$other": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    }
  }
} 